            "post": {
                "tags": [
                    "Vendas"
                ],
                "summary": "Cria uma venda",
                "operationId": "5d5dcc02258b51ed03fad16c2c5b14ba",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "cliente_id",
                                    "forma_pagamento",
                                    "itens"
                                ],
                                "properties": {
                                    "cliente_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "forma_pagamento": {
                                        "type": "string",
                                        "example": "cartao"
                                    },
                                    "entrada": {
                                        "type": "number",
                                        "example": 1000
                                    },
                                    "parcelamento": {
                                        "type": "string",
                                        "example": "2,30"
                                    },
                                    "itens": {
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "produto_id": {
                                                    "type": "integer",
                                                    "example": 15
                                                },
                                                "quantidade": {
                                                    "type": "integer",
                                                    "example": 2
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            },
                            "example": {
                                "cliente_id": 1,
                                "forma_pagamento": "cartao",
                                "parcelamento": "2,30",
                                "entrada": 1000,
                                "itens": [
                                    {
                                        "produto_id": 2,
                                        "quantidade": 2
                                    },
                                    {
                                        "produto_id": 5,
                                        "quantidade": 1
                                    }
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Venda criada com sucesso"
                    },
                    "401": {
                        "description": "Não autorizado"
                    },
                    "500": {
                        "description": "Erro ao registrar venda"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
